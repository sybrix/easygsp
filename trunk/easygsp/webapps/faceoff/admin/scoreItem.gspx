<html>
        <head>
          <title>Framework Faceoff - Admin</title>
        </head>
        <body>
                <%@ include file="menu.gsp" %>

                <form action="scoreItem.gspx" method="POST">
                        <input type="hidden" name="itemId" value="$item.itemId"/>

                        <table align="center">
                                <tr>
                                        <td>Name</td>
                                        <td><input type="text" name="weightName" value="<%= item.weightName?:'' %>" /></td>
                                </tr>
                                <tr>
                                        <td>Description</td>
                                        <td><textarea type="text" name="description" rows="5" cols="25"><%= item.description?:'' %></textarea></td>
                                </tr>
                                <tr>
                                        <td>Weight</td>
                                        <td><input type="text" name="weight" value="<%= item.weight?:'' %>" maxlength="5" size="5"/></td>
                                </tr>
                                <tr>
                                        <td>
                                                Category
                                        </td>
                                        <td>
                                                <select name="categoryId">
                                                <% categories.each {
                                                        if (it.categoryId == item.categoryId){   %>
                                                        <option value="$it.categoryId" selected="selected">$it.category</option>
                                                <%       } else{ %>
                                                        <option value="$it.categoryId">$it.category</option>
                                                <%      }
                                                } %>
                                                </select>
                                        </td>
                                </tr>
                                <tr>
                                        <td></td>
                                        <td>
                                                <input type="submit" name="delete" value="Delete"/>
                                                <input type="submit" name="save" value="Save"/>
                                        </td>
                                </tr>
                        </table>
                </form>
        </body>
</html>