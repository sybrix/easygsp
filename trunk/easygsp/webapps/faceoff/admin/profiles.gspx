<html>
        <head>
          <title>Framework Faceoff - Admin</title>
        </head>
        <body>
                <%@ include file="menu.gsp" %>

                <table border="1" align="center">
                        <tr>
                            <td>Id</td>
                            <td>Name</td>
                            <td>Email</td>
                            <td></td>
                        </tr>
                        <% p.each { %>
                        <tr>
                                <td>$it.profileId</td>
                                <td>$it.screenName</td>
                                <td>$it.email</td>
                                <td><a href="profile.gspx?profileId=${it.profileId}">Edit</a></td>
                        </tr>
                        <% } %>
                </table>

                <form action="profiles.gspx" method="POST">
                        <table align="center">
                                <tr>
                                        <td>Category</td>
                                        <td><input type="text" name="category" /></td>
                                </tr>
                                <tr>
                                        <td></td>
                                        <td><input type="submit" name="save" value="Save"/></td>
                                </tr>
                        </table>
                </form>
        </body>
</html>