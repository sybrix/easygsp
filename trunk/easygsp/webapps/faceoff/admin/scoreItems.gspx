
<html>
        <head>
                <title>Framework Faceoff - Admin</title>
                <script type="text/javascript">
                        function categoryChanged(obj){
                                window.location.href="scoreItems.gspx?categoryId=" + obj.value;
                        }
                </script>

        </head>
        <body>
                <%@ include file="menu.gsp" %>

                <form action="scoreItems.gspx" method="POST">
        Categories
        <select name="categoryId" onchange="categoryChanged(this)">
        <% categories.each {
                if (it.categoryId == toInt(params.categoryId?:'0')){   %>
                <option value="$it.categoryId" selected="selected">$it.category</option>
        <%       } else{ %>
                <option value="$it.categoryId">$it.category</option>
        <%      }
        } %>
        </select>

                <table border="1" align="center">
                        <tr>
                            <td>Name</td>
                            <td>Description</td>
                            <td>Weight</td>
                            <td></td>
                        </tr>
                        <% items.each { %>
                        <tr>
                                <td>$it.weightName</td>
                                <td>$it.description</td>
                                <td>$it.weight</td>
                                <td><a href="scoreItem.gspx?itemId=${it.itemId}">Edit</a></td>
                        </tr>
                        <% } %>
                </table>


                        <table align="center">
                                <tr>
                                        <td>Name</td>
                                        <td><input type="text" name="weightName" value="<%= params.weightName?:'' %>" /></td>
                                </tr>
                                <tr>
                                        <td>Description</td>
                                        <td><textarea type="text" name="description" rows="5" cols="25"><%= params.description?:'' %></textarea></td>
                                </tr>
                                <tr>
                                        <td>Weight</td>
                                        <td><input type="text" name="weight" value="<%= params.weight?:'' %>" maxlength="5" size="5"/></td>
                                </tr>
                                <tr>
                                        <td></td>
                                        <td><input type="submit" name="insert" value="Save"/></td>
                                </tr>
                        </table>
                </form>
        </body>
</html>