<html>
        <head>
          <title>Framework Faceoff - Admin</title>
        </head>
        <body>
                <%@ include file="menu.gsp" %>
        
                <table border="1" align="center">
                        <tr>
                            <td>Id</td>
                            <td>Category</td>
                            <td></td>
                        </tr>
                        <% request.categories.each { %>
                        <tr>
                                <td>$it.categoryId</td>
                                <td>$it.category</td>
                                <td><a href="category.gspx?categoryId=${it.categoryId}">Edit</a></td>
                        </tr>
                        <% } %>
                </table>
        
                <form action="categories.gspx" method="POST">
                        <table align="center">
                                <tr>
                                        <td>Category</td>
                                        <td><input type="text" name="category" /></td>
                                </tr>
                                <tr>
                                        <td></td>
                                        <td><input type="submit" name="save" value="Save"/></td>
                                </tr>
                        </table>
                </form>
        </body>
</html>